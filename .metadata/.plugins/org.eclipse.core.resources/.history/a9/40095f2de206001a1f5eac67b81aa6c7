			String str= driver.getTitle();
			if(str.contains("Applicant Tracking System"))
			{
				ExcelReader.setExcelData("Sheet1", i, 2, "pass");
			}
			else 
			{	
				ExcelReader.setExcelData("Sheet1", i, 2, "fail");						
			}
		}
	}
	
	@DataProvider
